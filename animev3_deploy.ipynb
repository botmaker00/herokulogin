API_ID = 0  # @param {type:"integer"}
API_HASH = ""  # @param {type:"string"}
ADMINS = 0  # @param {type:"integer"}
UPSTREAM_REPO = "https://github.com/botmaker00/audioremover"  # @param {type:"string"}
